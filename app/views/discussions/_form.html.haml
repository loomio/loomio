.row
  .span5
    = simple_form_for discussion, :validate => true do |f|
      %h2= t "discussion_form.header"
      .control-group
        - if @user_groups
          %p= t "discussion_form.who"
          = f.collection_select :group_id, user_groups.sort{|a,b| a.full_name <=> b.full_name}, :id, :full_name
        - else
          = f.input :group_id, :as => :hidden
      = f.input :title, autofocus: true
      = f.input :description,  input_html: { id: "wmd-input-new-discussion" }
      #wmd-button-bar-new-discussion.wmd-button-bar.hide
      = f.submit :class => "btn btn-success", id: "discussion-submit", :data => {:disable_with => t("helpers.submit.discussion.create")}
      %a.btn{id: 'preview-new-discussion'}= "Preview"
      .pull-right#toolbar
        %a.btn#discussion-formatting{'data-title' => 'Show formatting options'}
          %i.icon-font
      %h2#preview-title.hide
      #wmd-preview-new-discussion.hide.markdown

    = render 'application/hint', text: t(:"hint.discussion"), anchor: 'starting-an-engaging-discussion'

= render 'application/markdown_help'
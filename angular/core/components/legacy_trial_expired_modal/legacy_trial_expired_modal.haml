.legacy-trial-expired-modal
  .modal-header
    %modal_header_cancel_button
    %h1.lmo-h1.modal-title{translate: "legacy_trial_expired_modal.heading"}

  .modal-body.donation-modal__body
    %img.donation-modal__loomio-team{src: "/img/team-600.png", alt: "Loomio team photo"}
    %p.donation-modal__message{translate: "legacy_trial_expired_modal.body"}

  .modal-footer.lmo-clearfix
    %button.lmo-btn--primary.legacy-trial-expired-modal__submit{type: "button", ng-click: "submit()", translate: "legacy_trial_expired_modal.submit"}

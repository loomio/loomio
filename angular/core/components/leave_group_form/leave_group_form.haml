%form{ng-submit: "submit()"}
  .lmo-disabled-form{ng-show: "isDisabled"}
  .leave-group-form
    .modal-header
      %modal_header_cancel_button{aria-hidden: "true"}
      %h1.lmo-h1{translate: "leave_group_form.title"}

    .modal-body
      %span{ng-if: "canLeaveGroup()", translate: "leave_group_form.question"}
      %span{ng-if: "!canLeaveGroup()", translate: "leave_group_form.cannot_leave_group"}
    .modal-footer
      %button.lmo-btn--submit.leave-group-form__submit{ng-if: "canLeaveGroup()", type: "submit", translate: "leave_group_form.submit"}
      %a.lmo-btn--primary.leave-group-form__add-coordinator{ng-if: "!canLeaveGroup()", lmo-href-for: "group", lmo-href-action: "memberships", ng-click: "$close()"}
        %span{translate: "leave_group_form.add_coordinator"}
      %button.lmo-btn--cancel{ng-click: "$close()", type: "button", translate: "common.action.cancel"}

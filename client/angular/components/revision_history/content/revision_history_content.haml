  .revision-history-content{ng-switch:"model.constructor.singular"}
    %div{ng-switch-when:"comment"}
      %text_diff{before: "version.changes.body[0]", after: "version.changes.body[1]"}
    %div{ng-switch-when:"discussion"}
      %text_diff.lmo-h1.revision-history-content--header{before: "version.changes.title[0]", after: "version.changes.title[1]"}
      %text_diff{before: "version.changes.description[0]", after: "version.changes.description[1]"}
      %p{ng-if:"version.changes.private && !version.isOriginal()", translate:"revision_history_modal.private_changed", translate-values:"noticeValues('private')"}
      %p{ng-if:"version.changes.group_id && !version.isOriginal()", translate:"revision_history_modal.group_id_changed", translate-values:"noticeValues('group_id')"}
    %div{ng-switch-when:"poll"}
      %text_diff.poll-common-card__title.revision-history-content--header{before: "version.changes.title[0]", after: "version.changes.title[1]"}
      %text_diff{before: "version.changes.details[0]", after: "version.changes.details[1]"}
      %p{ng-if:"version.changes.closing_at"}
        %span{translate:"revision_history_modal.closing_at_changed"}>
        %timeago{timestamp: "version.changes.closing_at[1]"}

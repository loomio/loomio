%md-dialog.poll-common-modal
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %i.mdi{class: "{{icon()}}"}
      %h1.lmo-h1{ng-switch: "currentStep"}
        %span{translate: "poll_common_reopen_form.title", ng-switch-when: "reopen"}
        %span{translate: "announcement.form.modal_title", ng-switch-when: "announce"}
      %material_modal_header_cancel_button
  %md-dialog-content
    %div.lmo-slide-animation{ng-switch: "currentStep"}
      %poll_common_reopen_form.animated{poll: "poll", ng-switch-when: "reopen"}
      %announcement_form.animated{announcement: "announcement", ng-switch-when: "announce"}
    %dialog_scroll_indicator
  %md-dialog-actions.lmo-slide-animation{ng-switch: "currentStep"}
    %poll_common_reopen_form_actions.animated{poll: "poll", ng-switch-when: "reopen"}
    %announcement_form_actions.animated{announcement: "announcement", ng-switch-when: "announce"}

%h2.header-space Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  %h5.padding
    Email
    .left-format= f.email_field :email
    Password
    %i (leave blank if you don't want to change it)
    .left-format= f.password_field :password
    Password confirmation
    .left-format= f.password_field :password_confirmation
    Current password
    %i (we need your current password to confirm your changes)
    .left-format= f.password_field :current_password
    .standard-button= f.submit "Update", class: "btn primary small"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back

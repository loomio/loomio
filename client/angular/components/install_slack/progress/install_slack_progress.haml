.install-slack-progress
  .install-slack-progress__bar
  .install-slack-progress__bar.active{ng-style: "{'width': progressPercent()}"}
  .install-slack-progress__dot{ng-class: "{'active': slackProgress == 0, 'complete': slackProgress >= 0}"}
    %label{translate: "install_slack.progress.install"}
  .install-slack-progress__dot{ng-class: "{'active': slackProgress == 50, 'complete': slackProgress >= 50}"}
    %label{translate: "install_slack.progress.invite"}
  .install-slack-progress__dot{ng-class: "{'active': slackProgress == 100, 'complete': slackProgress >= 100}"}
    %label{translate: "install_slack.progress.decide"}

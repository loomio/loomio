%body
  %header.page-header{:role => "banner"}
    %h1= t('.title')
  %main{:role => "main"}
    %p.h4
      = raw t('.prompt', client_name: "<strong class=\"text-info\">#{ @pre_auth.client.name }</strong>")
    - if @pre_auth.scopes.count > 0
      #oauth-permissions
        %p= t('.able_to')
        %ul.text-info
          - @pre_auth.scopes.each do |scope|
            %li= t scope, scope: [:doorkeeper, :scopes]
    .actions
      = form_tag oauth_authorization_path, class: 'pull-left', method: :post do
        = hidden_field_tag :client_id, @pre_auth.client.uid
        = hidden_field_tag :redirect_uri, @pre_auth.redirect_uri
        = hidden_field_tag :state, @pre_auth.state
        = hidden_field_tag :response_type, @pre_auth.response_type
        = hidden_field_tag :scope, @pre_auth.scope
        = submit_tag t('doorkeeper.authorizations.buttons.authorize'), class: "btn btn-success btn-lg"
      = form_tag oauth_authorization_path, class: 'pull-left', method: :delete do
        = hidden_field_tag :client_id, @pre_auth.client.uid
        = hidden_field_tag :redirect_uri, @pre_auth.redirect_uri
        = hidden_field_tag :state, @pre_auth.state
        = hidden_field_tag :response_type, @pre_auth.response_type
        = hidden_field_tag :scope, @pre_auth.scope
        = submit_tag t('doorkeeper.authorizations.buttons.deny'), class: "btn btn-danger btn-lg"

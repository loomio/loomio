.thread-lintel{ng-if: 'show()'}
  .thread-lintel__left
    %img.thread-lintel__logo{ng-src: '{{discussion.group().logoUrl()}}'}
    .thread-lintel__title{ng-click: 'scrollToThread()'} {{ discussion.title }}
    .thread-lintel__proposal{ng-show: 'discussion.activeProposal() && !proposalInView', ng-click: 'scrollToProposal()'}
      %tiny_proposal_pie_chart.thread-lintel__proposal-pie-chart{proposal: 'discussion.activeProposal()'}
      %span {{ discussion.activeProposal().name }}
  .thread-lintel__right{ng-show: '!proposalButtonInView'}
    %start_proposal_button{discussion: 'discussion'}

  .thread-lintel__progress-wrap.thread-lintel__progress
    .thread-lintel__progress-bar.thread-lintel__progress{style: 'width: {{positionPercent}}%'}

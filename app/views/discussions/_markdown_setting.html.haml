%ul.dropdown-menu.markdown-setting-dropdown
  %li.enable-markdown
    %a{href: '#', class: 'enable-markdown-link'}
      %i{:class => css_for_markdown_link(target, true)}
      = t :enable
  %li.disable-markdown
    %a{href: '#', class: 'disable-markdown-link'}
      %i{:class => css_for_markdown_link(target, false)}
      = t :disable
  .divider

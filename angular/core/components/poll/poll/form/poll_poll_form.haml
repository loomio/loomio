.poll-poll-form
  %poll_common_form_fields{poll: "poll"}
  %poll_common_form_options{poll: "poll"}
  %poll_common_closing_at_field.md-input-compensate.md-block{poll: "poll"}

  .md-input-compensate
    .md-block.poll-poll-form__multiple-choice.poll-common-checkbox-option
      .poll-common-checkbox-option__text.md-list-item-text
        %h3{translate: "poll_poll_form.multiple_choice"}
        %p.md-caption{translate: "poll_poll_form.multiple_choice_explained"}
      %md-checkbox{ng-model: "poll.multipleChoice", aria-label: "{{ 'poll_poll_form.multiple_choice' | translate }}"}

  %poll_common_notify_group{model: "poll", notify-action: "{{poll.notifyAction()}}"}
  %poll_common_voter_add_options{poll: "poll"}
  %poll_common_notify_on_participate{poll: "poll"}
  %poll_common_form_actions{poll: "poll", submit: "submit", back: "back"}

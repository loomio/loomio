%ul.selector-list
  #closed-motions-list
    - if @closed_motions.exists?
      - @closed_motions.each do |motion|
        %li.selector-item= render '/motions/motion_preview', motion: motion, this_group: @group
    - else
      %li.selector-item.empty-list-message= "This group has not made any decisions yet."
  #closed-motions-loading
    %li.selector-item.loading Loading...
= paginate @closed_motions, :window => 3, :remote => :true

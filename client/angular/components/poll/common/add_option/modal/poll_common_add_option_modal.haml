%md-dialog.poll-common-modal
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %i.mdi.mdi-lightbulb-on-outline
      %h1.lmo-h1{ng-switch: "currentStep"}
        %span{translate: "poll_common_add_option.modal.title", ng-switch-when: "save"}
        %span{translate: "announcement.form.poll.title", ng-switch-when: "announce"}
      %material_modal_header_cancel_button
  %md-dialog-content.lmo-slide-animation{ng-switch: "currentStep"}
    %poll_common_add_option_form.animated{ng-switch-when: "save", poll: "poll"}
    %announcement_form.animated{ng-switch-when: "announce", announcement: "announcement"}
  %md-dialog-actions.lmo-slide-animation{ng-switch: "currentStep"}
    %poll_common_add_option_form_actions.animated{ng-switch-when: "save", poll: "poll"}
    %announcement_form_actions.animated{ng-switch-when: "announce", announcement: "announcement"}

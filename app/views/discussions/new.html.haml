- set_title @group.name, "New Discussion"
=render '/groups/title', group: @group
%h1 New Discussion
= form_for @discussion do |f|
  .row
    .span5
      .control-group
        = f.label :title, "Title", {class: "control-label", for: "validate-presence"}
        = f.text_field :title, class: "validate-presence inputError limit-150"
        .presence-error-message Please fill in a discussion title
      .character-counter
  .field
    = f.label :comment, "Comment"
    = f.text_area :comment
  .field.notify-group-checkbox
    = f.check_box :notify_group_upon_creation
    = f.label :notify_group_upon_creation,
    "Send email notification to group members that this discussion has been created",
    class: "checkbox-label"
  = f.submit "Create discussion", class: "btn btn-info run-validations", :data => { :disable_with => "Creating discussion" }
  = f.hidden_field :group_id

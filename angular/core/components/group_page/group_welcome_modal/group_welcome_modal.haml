.group-welcome-modal
  .modal-header
    %modal_header_cancel_button
    %h1.lmo-h1.modal-title{translate: "group_welcome_modal.{{membershipStatus()}}_heading"}

  .modal-body
    %p{translate: "group_welcome_modal.{{membershipStatus()}}_info"}
    .group-welcome-model__video-wrapper
      %iframe.group-welcome-modal__video{lmo-src: "{{helpVideo()}}", frameborder: "0", allowfullscreen=''}
    %p{translate: "group_welcome_modal.{{membershipStatus()}}_footer"}

  .modal-footer.lmo-clearfix
    %button.lmo-btn--primary.group-welcome-modal__close-button{type: "button", ng-click: "$close()", translate: "group_welcome_modal.ok_got_it"}

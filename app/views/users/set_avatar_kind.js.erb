if ("<%= @avatar_kind %>" == "initials") {
  $('#avatar-preview').html("<%= escape_javascript(current_user.avatar_initials) %>");
  $('#header-user-image').html("<%= escape_javascript(current_user.avatar_initials) %>");
  $('#image-option-initials').html("<%= escape_javascript(current_user.avatar_initials) %>");
}
else {
  $('#avatar-preview').html("<%= escape_javascript(image_tag(current_user.avatar_url(@avatar_kind, :large))) %>");
  $('#header-user-image').html("<%= escape_javascript(image_tag(current_user.avatar_url(@avatar_kind, :small))) %>");
};
$('#user-avatar-kind').val("<%= @avatar_kind %>");

.poll-common-form-actions.lmo-flex
  %span{ng-if: "!poll.isNew()"}
  %md-button.md-raised{ng-if: "poll.isNew()", ng-click: "back()", translate: "common.action.back", aria-label: "{{ 'common.action.back' | translate }}"}
  %md-button.md-primary.md-raised.poll-common-form__submit{ng-click: "submit()", ng-if: "!poll.isNew()", translate: "poll_common_form.update", aria-label: "{{ 'poll_common_form.update' | translate }}"}
  %md-button.md-primary.md-raised.poll-common-form__submit{ng-click: "submit()", ng-if: "poll.isNew() && poll.groupId", translate: "poll_common_form.start", aria-label: "{{ 'poll_common_form.start' | translate }}"}
  %md-button.md-primary.md-raised.poll-common-form__submit{ng-click: "submit()", ng-if: "poll.isNew() && !poll.groupId", translate: "common.action.next", aria-label: "{{ 'common.action.next' | translate }}"}

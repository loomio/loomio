.poll-mailer-common-footer
  .poll-mailer-common-footer__spacer= PollMailer::REPLY_DELIMITER
  .poll-mailer-common-footer__text
    -# %div= t(:"poll_mailer.common.why_send_this", reason: @info.send_reason)
    = link_to t(:"poll_mailer.common.view_on_loomio", site_name: AppConfig.theme[:site_name]), @info.target_url
    - if @info.recipient.is_logged_in? && @info.action_name!=:export
      %span= t(:"poll_mailer.common.or")
      = link_to t(:"poll_mailer.common.unsubscribe"), @info.unsubscribe_url
  = image_tag AppConfig.theme[:email_footer_logo_src], alt: "Logo", class: "thread-mailer__footer-logo"
  %p= t(:'email.value_proposition', site_name: AppConfig.theme[:site_name])

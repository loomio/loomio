.mute-explanation-modal
  .modal-header
    %modal_header_cancel_button{aria-hidden: "true"}
    %h1.lmo-h1.mute-explanation-modal__title{translate: "mute_explanation_modal.mute_thread"}

  .modal-body.mute-explanation-modal__body
    .mute-explanation-modal__mute-explanation{translate: "mute_explanation_modal.body_html"}
    .mute-explanation-modal__muted-threads-image
      %img{src: "/img/muted-threads-sidebar.png", alt: "{{ 'mute_explanation_modal.image_alt' | translate }}"}

  .modal-footer.lmo-clearfix
    %button.mute-explanation-modal__mute-thread{type: "button", ng-click: "muteThread()", translate: "mute_explanation_modal.mute_thread"}
    %button.mute-explanation-modal__cancel{type: "button", ng-click: "$close()", translate: "common.action.cancel"}

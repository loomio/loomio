<% url = local_assigns.fetch(:url, polymorphic_url(event.eventable)) %>
<% message = local_assigns.fetch(:message, event.recipient_message) %>
<% poll_type = @poll ? t("poll_types.#{@poll.poll_type}") : nil %>
<% title = plain_text(event.eventable.title_model, :title) %>
<%= t("notifications.without_title.#{event.kind}", actor: event.user.name, title: "[#{title}](#{url})", poll_type: poll_type, site_name: AppConfig.theme[:site_name]) %>
<% if message.present? %>

<%= message %>
<% end %>

.cover-photo-form
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %div
      %h1.lmo-h1{translate: "cover_photo_form.heading"}
      %material_modal_header_cancel_button
  .md-dialog-content.md-body-1
    %md-button.lmo-flex{ng-click: "selectFile()"}
      .user-avatar.lmo-box--small.lmo-margin-right
        .user-avatar__initials--small
          %i.material-icons camera_enhance
      %span{translate: "cover_photo_form.upload_link"}
    %input.hidden.cover-photo-form__file-input{type: "file", ng-model: "files", ng-file-select: "upload(files)"}
    %p.lmo-hint-text{translate: "cover_photo_form.image_size_helptext"}

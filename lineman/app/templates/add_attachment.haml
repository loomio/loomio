.attachments
  .attachment-new{ng_hide: 'isAttaching'}
    %input{type: 'file', ng_file_select: 'upload($files)'}
  .attachment-in-progress{ng_show: 'isAttaching'}
    .attachment-filename {{ uploadingFilename }}
    .progress.active
      %progress-bar.progress-striped.active{ng_attr_value: 'percentComplete'}
        {{ percentComplete }} %
    %button.close.cancel-upload{ng_click: 'abort()'} &times;

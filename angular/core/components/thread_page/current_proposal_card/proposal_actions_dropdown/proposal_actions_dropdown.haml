.proposal-actions-dropdown.pull-right{uib-dropdown: "true"}
  %button.lmo-btn--nude.proposal-actions-dropdown__btn{uib-dropdown-toggle: "true"}
    %i.fa.fa-chevron-down
  .uib-dropdown-menu.lmo-dropdown-menu{role: "menu"}
    %ul.lmo-dropdown-menu-items
      %li.lmo-dropdown-menu-item{ng-if: "canEditProposal()"}
        %a.lmo-dropdown-menu-item-label.proposal-actions-dropdown__edit-link{ng_click: "editProposal()"}
          %span{translate: "proposal_expanded.edit_proposal"}

      %li.lmo-dropdown-menu-item{ng-if: "!canEditProposal() && canCloseOrExtendProposal()"}
        %a.lmo-dropdown-menu-item-label.proposal-actions-dropdown__extend-link{href: "#", ng_click: "extendProposal()"}
          %span{translate: "proposal_expanded.extend_proposal"}

      %li.lmo-dropdown-menu-item{ng-if: "canCloseOrExtendProposal()"}
        %a.lmo-dropdown-menu-item-label.proposal-actions-dropdown__close-link{href: "#", ng_click: "closeProposal()"}
          %span{translate: "proposal_expanded.close_proposal"}

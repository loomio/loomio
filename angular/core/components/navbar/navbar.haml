%header.lmo-navbar
  %md_toolbar
    .md-toolbar-tools.lmo-relative
      .navbar__left
        %md_icon_button.navbar__sidenav-toggle{aria-hidden: "true", ng-show: "isLoggedIn()", ng-click: "toggleSidebar()", aria-label: "{{ 'navbar.toggle_sidebar' | translate }}"}
          %i.material-icons &#xE5D2;

      .navbar__middle
        %a{lmo-static-href: "/", aria-label: "{{ 'navbar.logo_title' | translate }}"}
          %img.navbar__logo{src: "/img/logo.png", alt: "Loomio logo"}

      .navbar__right
        %navbar_search{ng-show: "isLoggedIn()"}
        %notifications{ng-show: "isLoggedIn()"}
        %md-button.md-primary.md-raised.navbar__sign-in{ng-if: "!isLoggedIn()", ng-click: "signIn()"}>
          %span{translate: "navbar.sign_in"}

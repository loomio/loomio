.row
  .span9
    - set_title @group.name, "", @group.parent
    = render '/groups/title', group: @group
    %h1= t("subscriptions.details")
    %p= t("subscriptions.current_plan_html", subscription_plan: PaypalCheckout.subscription_text_for(@group.subscription_plan))
    %p= t("subscriptions.people_in_group", people_in_group: @group.members.count)
    %p= t("subscriptions.payment_plan_contact_html")
.row
  .span4
    .info-box#organisation
      %table
        %h3= t("subscriptions.subscription.table.title_html")
        - PaypalCheckout::AMOUNT_OPTIONS.each do |amount|
          %tr
            %td= t("subscriptions.subscription.table.quantity", people: PaypalCheckout::DOLLARS_TO_PEOPLE[amount])
            %td= t("subscriptions.subscription.table.price_html", amount: amount)
        %tr
          %td= t("subscriptions.subscription.table.quantity_more")
          %td= t("subscriptions.subscription.table.price_talk_html")

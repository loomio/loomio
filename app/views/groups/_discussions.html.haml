- if discussions_motion.present?
  .proposal-block
    %h4 PROPOSALS AWAITING YOUR DECISION
    .info-help{title: "Proposals awaiting your decision", "data-content"=> "Current discussions that contain proposals you have not yet decided on"}
    - discussions_motion.each do |discussion|
      =render discussion, this_group: group
- if discussions_active.present?
  .proposal-block
    %h4 CURRENT DISCUSSIONS
    .info-help{title: "Current discussions", "data-content"=> "Discussions with recent activity (comments/decisions within the last 2 weeks)"}
    - discussions_active.each do |discussion|
      =render discussion, this_group: group
- if discussions_inactive.present?
  .proposal-block
    %h4 INACTIVE DISCUSSIONS
    .info-help{title: "Inactive discussions", "data-content"=> "Discussions without any recent activity (no comments/decisions within the last 2 weeks)"}
    - discussions_inactive.each do |discussion|
      =render discussion, this_group: group

:coffeescript
  $ ->
    @infoHelp = new Loomio.Views.Utils.InfoHelp
      el: $(".info-help")

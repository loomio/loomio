%section.membership-requests-card
  %h2.lmo-card-heading{ translate: 'membership_requests_card.heading', translate-value-count: '{{group.pendingMembershipRequests().length}}'}
  %ul.membership-requests-card__pending-requests
    %li.media{ng-repeat: 'membershipRequest in group.pendingMembershipRequests() track by membershipRequest.id'}
      .media-left
        %user_avatar{user: 'membershipRequest.actor()'}
      .media-body
        %span.membership-requests-card__requestor-name {{membershipRequest.actor().name}}
        .membership-requests-card__requestor-introduction {{membershipRequest.introduction}}
  %a.membership-requests-card__link{href: '/g/{{group.key}}/membership_requests', translate: 'membership_requests_card.manage_requests'}

- if local_assigns[:size] == 'small'
  - style = "height: 24px; min-width: 24px; width: 24px;"
  - size = :small
- else
  - style = "height: 40px; min-width: 40px; width: 40px;"
  - size = :medium

.base-mailer__avatar.v-avatar{:title => user.name, :style => style}
  - if user.presence
    - if user.avatar_url(:medium)
      = image_tag user.avatar_url(:medium), alt: "#{user.avatar_initials}", class: "base-mailer__avatar-image"
    - else
      .base-mailer__avatar-initials= user.avatar_initials

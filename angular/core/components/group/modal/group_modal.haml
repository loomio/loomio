%md-dialog.group-form.lmo-modal__narrow
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %i.material-icons group
      .group-form__title{ng-switch: "currentStep"}
        .group-form__group-title{ng-switch-when: "create"}
          %h1.lmo-h1{ng-if: "group.isNew() && group.parentId", translate: "group_form.start_subgroup_heading"}
          %h1.lmo-h1{ng-if: "group.isNew() && !group.parentId", translate: "group_form.start_group_heading"}
          %h1.lmo-h1{ng-if: "!group.isNew()", translate: "group_form.edit_group_heading"}
        .group-form__invitation-title{ng-switch-when: "invite"}
          %h1.lmo-h1{translate: "invitation_form.invite_people"}
      %material_modal_header_cancel_button
  .md-dialog-content.md-body-1.lmo-slide-animation{ng-switch: "currentStep"}
    %group_form.animated{ng-switch-when: "create", group: "group"}
    %invitation_form.animated{ng-switch-when: "invite", group: "group"}

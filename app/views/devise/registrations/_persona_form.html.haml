=simple_form_for(@user, url: user_registration_path, :defaults => {:required => false}) do |f|
  =f.error_notification
  =f.input :name
  =f.input :email
  =f.input :language_preference, :collection => Translation::LANGUAGES, selected: I18n.locale, include_blank: false

  .terms-of-service-text=t(:terms_of_service_html, button_text: t(:"devise.registrations.sign_up"), link_path: terms_of_service_path)
  -sign_up = t(:"devise.registrations.sign_up")
  =f.submit sign_up, class: "btn btn-info btn-large", :data => {:disable_with => sign_up}

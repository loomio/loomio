.cover-photo-form
  .lmo-disabled-form{ng-show: "isDisabled"}
  .modal-header
    %modal_header_cancel_button{aria-hidden: "true"}
    %h1.lmo-h1.modal-title{translate: "cover_photo_form.heading"}

  .modal-body
    %button.lmo-btn-link{ng-click: "selectFile()"}
      .lmo-box--small.lmo-float--left
        .user-avatar__initials--small
          %i.fa.fa-lg.fa-camera
      %span.lmo-option-text{translate: "cover_photo_form.upload_link"}
    .lmo-clearfix
    %input.hidden.cover-photo-form__file-input{type: "file", ng-model: "files", ng-file-select: "upload(files)"}
    %p{translate: "cover_photo_form.image_size_helptext"}

  .modal-footer.lmo-clearfix
    %button.lmo-btn--cancel{ng-click: "$close()", type: "button", translate: "common.action.cancel"}

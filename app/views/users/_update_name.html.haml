#edit-name
  %h2 Name
  = link_to user.name, '#', id: 'edit-name-link'
  = form_tag edit_name_user_path(user), method: 'put', :id => "edit-name-form", :class => 'hidden', :remote => true  do |f|
    = hidden_field_tag 'id', user.id
    = text_field_tag :user_name, user.name, :autofocus => true
    .save-buttons.clearfix
      = submit_tag "Save", class: 'btn btn-small btn-grey run-validations', id: 'edit-name-submit', :data => {:disable_with => "Saving"}
      = link_to "Cancel", "#", id: 'cancel-edit-name'
.poll-dot-vote-votes-panel-stance
  .poll-dot-vote-votes-panel-stance__head
    %user_avatar.lmo-flex__no-shrink{user: "stance.participant()", size: "small"}
    .poll-dot-vote-votes-panel-stance__name
      %strong> {{stance.participant().name}}
  .poll-dot-vote-votes-panel-stance__body
    .poll-common-votes-panel__stance-reason.lmo-markdown-wrapper{ng-if: "stance.reason", marked: "stance.reason"}
    .poll-dot-vote-votes-panel__stance-choice{ng-if: "choice.score > 0", ng-repeat: "choice in stanceChoices()", ng-style:"styleData(choice)"}
      {{barTextFor(choice)}}

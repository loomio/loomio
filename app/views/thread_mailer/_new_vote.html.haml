- vote = item.eventable
- position = vote.position

%table
  %tr
    %td.icon.activity-icon
      = image_tag "thread_mailer/#{position}-24.png", alt: "#{vote.position} icon"
    %td.content
      %b= vote.author.name
      - past_tense_position = I18n.t("position_verbs.past_tense.#{position}")
      %em= t('notifications.new_vote', position: past_tense_position)
      = render_email_plaintext vote.statement

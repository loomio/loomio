.notify-chip.lmo-flex{layout: "row", data-id: "{{chip.id}}"}
  %img.notify-chip__avatar{ng-if: "chip.logo_url", ng-src: "{{chip.logo_url}}"}
  .notify-chip__placeholder{ng-if: "!chip.logo_url", ng-switch: "chip.type"}
    %img.notify-chip__avatar{ng-switch-when: "FormalGroup", src: "/img/default-logo-medium.png"}
    %i.material-icons{ng-switch-when: "User"} person
    %i.material-icons{ng-switch-when: "Invitation"} mail_outline
  .notify-chip__content.lmo-flex{layout: "column"}
    %strong {{chip.title}}
    %span{ng-if: "chip.subtitle"} {{chip.subtitle}}

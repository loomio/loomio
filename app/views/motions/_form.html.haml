#motion-form
  = simple_form_for @motion, validate: true do |f|
    %h2= t "motion_form.header"
    .row
      .span5
        %p= t "motion_form.name_helper"
        = f.input :name, id: "motion-name"
    .row
      .span9
        = render 'motions/close_at_inputs', form: f, user: @current_user
    .row
      .span5
        #description
          = f.input :description, input_html: { id: "wmd-input-new-motion" }
        #wmd-button-bar-new-motion.wmd-button-bar.hide

        = f.input :discussion_id, as: :hidden, input_html: {value: @motion.discussion_id}
        = f.submit :class => "btn btn-success run-validations", id: "proposal-submit", :data => {:disable_with => t("helpers.submit.motion.create")}
        %a.btn{id: 'preview-new-motion'}= "Preview"
        .pull-right#toolbar
          %a.btn#motion-formatting{'data-title' => 'Show formatting options'}
            %i.icon-font
        %h2#preview-title.hide
        #wmd-preview-new-motion.hide.markdown

        = render 'application/hint', text: t(:"hint.proposal"), anchor: 'writing-a-clear-proposal'

= render 'application/markdown_help'
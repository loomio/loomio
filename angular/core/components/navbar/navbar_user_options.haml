.navbar-user-options
  .blank{uib-dropdown: "true"}
    %button.btn.lmo-btn-nude.lmo-navbar__btn.lmo-navbar__btn-icon{href: "", tabindex: 5, uib-dropdown-toggle: "true"}
      .sr-only{translate: "navbar.user_options.label"}
      %user_avatar{user: "currentUser()", size: "small", ng-if: "currentUser().avatarKind != 'initials'"}
      .navbar-user-options__user-profile-icon.user-avatar{ng-if: "currentUser().avatarKind == 'initials'"}
        %i.fa.fa-lg.fa-user
    .uib-dropdown-menu.lmo-dropdown-menu.lmo-dropdown-menu--with-icons.user-options-dropdown
      %ul.lmo-dropdown-menu-items
        %li.lmo-dropdown-menu-item
          %a.navbar-user-options__profile-link{lmo-href: "/profile"}
            %i.fa.fa-lg.fa-cog>
            %span{translate: "navbar.user_options.profile"}
        %li.lmo-dropdown-menu-item
          %a.navbar-user-options__email-settings-link{lmo-href: "/email_preferences"}
            %i.fa.fa-envelope>
            %span{translate: "navbar.user_options.email_settings"}
        %li.lmo-dropdown-menu-item
          %a.navbar-user-options__help-link{lmo-href: "{{helpLink()}}", target: "_blank"}
            %i.fa.fa-info-circle>
            %span{translate: "navbar.user_options.help"}
        %li.lmo-dropdown-menu-item{ng-if: "showContactUs()"}
          %a.navbar-user-options__contact-us-link{ng-click: "contactUs()"}
            %i.fa.fa-question-circle>
            %span{translate: "navbar.user_options.contact_us"}
        %li.lmo-dropdown-menu-item
          %a.navbar-user-options__sign-out-link{href: "", ng-click: "signOut()"}
            %i.fa.fa-lg.fa-sign-out>
            %span{translate: "navbar.user_options.sign_out"}

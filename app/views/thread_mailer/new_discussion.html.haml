= render 'avatar', user: @author
.thread-mailer__subject
  %strong
    = @discussion.author.name
  %span
    = t :"email.create_discussion.intro_html"
  %span
    %strong
      = link_to @discussion.title, discussion_url(@discussion, @utm_hash)

= render_rich_text(@discussion.description, @discussion.uses_markdown)
- if @discussion.attachments.any?
  = render "attachments", resource: @discussion

%form.poll-meeting-vote-form
  %h3.lmo-card-subheading{translate: "poll_meeting_vote_form.your_response"}
  .lmo-flex.lmo-flex__flex-end
    %time_zone_select
  %md-list.poll-common-vote-form__options
    %md-list-item.poll-common-vote-form__option{ng-repeat: "option in stance.poll().pollOptions()"}
      %p.poll-poll-vote-form__option--name.poll-common-vote-form__border-chip{ng-style: "{'border-color': option.color}"}
        %poll_meeting_time{name: "option.name", zone: "zone"}
      %md-checkbox.md-block.poll-poll-vote-form__checkbox{ng-model: "pollOptionIdsChecked[option.id]"}
  %validation_errors{subject: "stance", field: "stanceChoices"}

  .poll-common-vote-form__reason
    %md-input-container.md-block
      %label{translate: "poll_common.message"}
      %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.reasonPlaceholder}}", ng-model: "stance.reason", md-maxlength: "250"}
      %validation_errors{subject: "stance", field: "reason"}

  %poll_common_participant_form{stance: "stance"}

  .poll-common-form-actions
    %show_results_button{ng-if: "stance.isNew()"}
    %md-button.md-primary.md-raised{ng-click: "submit()", translate: "poll_common.vote", aria-label: "{{ 'poll_meeting_vote_form.vote' | translate }}"}

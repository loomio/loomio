#group
  %h2.headerspace.group-title
    = link_to @group.parent.name, group_path(@group.parent), title: "group" unless @group.parent.nil?
    = " > " unless @group.parent.nil?
    = @group.name
    = link_to "Edit group", edit_group_path(@group), class: "btn small"
    = link_to "Add subgroup", group_add_subgroup_path(@group), class: "btn small" if @group.parent.nil?
  .row
    .span11
      %h4.padding
        Open motions
        #btn-create-motion
          - if @group.users_include? current_user
            = link_to "Create a motion",
            new_motion_path({group_id: @group.id}), :class => 'btn primary small'
      .motions-list
        = render "home/open_motions", motions: @group.motions
      %h4 Closed motions
      .motions-list
        = render "home/closed_motions", motions: @group.motions
    .span5
      #sidebar
        =render 'users', group: @group
        =render 'subgroups', group: @group unless @group.subgroups.empty?

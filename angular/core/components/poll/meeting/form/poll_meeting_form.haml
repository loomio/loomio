.poll-meeting-form
  %p.poll-common-tip{ng-if: "poll.isNew()", translate: "poll_meeting_form.tip"}

  %md-input-container.md-block
    %label{translate: "poll_common_form.title"}
    %input.lmo-primary-form-input.poll-meeting-form__title{type: "text", placeholder: "{{translations.titlePlaceholder}}", ng-model: "poll.title", md-maxlength="250"}
    %validation_errors{subject: "poll", field: "title"}

  %md-input-container.md-block
    %label{translate: "poll_common_form.details"}
    %textarea.lmo-primary-form-input.poll-meeting-form__details{ng-model: "poll.details", placeholder: "{{translations.detailsPlaceholder}}", mention-field: "true"}
    %outlet{name: "after-poll-form-textarea", model: "poll"}

  .md-input-compensate
    %poll_common_attachment_form{poll: "poll"}

  %md-list.md-block
    %label.poll-common-form__options-label.md-caption{translate: "poll_common_form.options"}
    %validation_errors{subject: "poll", field: "pollOptions"}
    .poll-meeting-form__options
      %md-list-item.poll-meeting-form__poll-option-name{layout: "row", ng-repeat: "name in poll.pollOptionNames track by $index"}
        %poll_meeting_time.poll-meeting-form__option-text.lmo-flex__grow{name: "name"}
        %md-button.poll-meeting-form__option-button.lmo-inline-action{ng-click: "removeOption(name)", aria-label: "{{ 'poll_meeting_form.remove_option' | translate }}"}
          %i.material-icons.poll-meeting-form__option-icon clear
      %poll_meeting_time_field{poll: "poll"}

  .md-input-compensate
    %poll_common_closing_at_field.md-block.poll-meeting-form__closing-at{poll: "poll"}

  .md-input-compensate
    %poll_common_notify_group{model: "poll"}
  %poll_common_form_actions{poll: "poll", submit: "submit", back: "back"}

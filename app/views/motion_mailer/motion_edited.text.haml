= t("email.proposal_edited.intro", who: @editor.name, proposal_name: @motion.name)
\
- unless @motion.edit_message.blank?
  = t("email.proposal_edited.change", edit_message: @motion.edit_message)
\
= "#{t('email.view_proposal')}:"
= motion_url(@motion)
\
= "#{t(:proposal)}:"
= @motion.name
\
= "#{t(:group)}:"
= @motion.group.name
\
= "#{t(:author)}:"
= @motion.author.name
\
- if @motion.has_close_date?
  = "#{t('email.create_proposal.closes_in')}:"
  = time_ago_in_words(@motion.close_at) + " (" + @motion.close_at.localtime.strftime('%a %d %b %Y, %I:%M%p, %Z') + ")"
\
- if @motion.description.present?
  = "#{t(:details)}:"
  = @motion.description
\
= t("email.view_proposal")
= discussion_url(@motion.discussion, proposal: @motion)

/ = render 'user_mailer/unsubscribe_link_text'

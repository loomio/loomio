= render 'avatar', author: @author
.thread-mailer__subject
  - if @following
    = t(:'email.thread_mailer.new_motion', who: @motion.author_name)
  - else
    = t(:'email.new_motion_created.context', author: @motion.author_name, group_full_name: @group.full_name)
  %h4= link_to @motion.name, motion_url(@motion, @utm_hash)

  = render_rich_text(@motion.description, true)

  %p= t(:'email.proposal_closing_soon.closes_on') + ' ' + motion_closing_time_for(@recipient)
.thread-mailer__vote-prompt
  %h4= t(:'help.have_your_say')
  = render 'vote_buttons', motion: @motion

- if @info.undecided_memberships.any?
  %h3= t(:"poll_mailer.common.undecided_members", count: @info.undecided_memberships.count)
  %table
    - @info.undecided_memberships.limit(@info.undecided_max).each do |membership|
      %tr
        %td= render 'poll_mailer/common/avatar', participant: membership.user
        %td= membership.user.name
    - if @info.undecided_memberships.count > @info.undecided_max
      %tr
        %td
        %td= t(:"poll_mailer.common.more_undecided", count: @info.undecided_memberships.count - @info.undecided_max)

- if @info.undecided_visitors.any?
  %h3= t(:"poll_mailer.common.undecided_visitors", count: @info.undecided_visitors.count)
  %table
    - @info.undecided_visitors.limit(@info.undecided_max).each do |visitor|
      %tr
        %td= render 'poll_mailer/common/avatar', participant: visitor
        %td= visitor.name
    - if @info.undecided_visitors.count > @info.undecided_max
      %tr
        %td
        %td= t(:"poll_mailer.common.more_undecided", count: @info.undecided_visitors.count - @info.undecided_max)

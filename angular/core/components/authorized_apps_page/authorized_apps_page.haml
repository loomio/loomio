.lmo-one-column-layout
  %loading{ng-show: "authorizedAppsPage.loading"}
  %main.authorized-apps-page{ng-if: "!authorizedAppsPage.loading"}
    %h1.lmo-h1{translate: "authorized_apps_page.title"}
    %hr
    .lmo-placeholder{ng-if: "authorizedAppsPage.applications().length == 0", translate: "authorized_apps_page.no_applications"}
    .authorized-apps-page__table{ng-if: "authorizedAppsPage.applications().length > 0"}
      .lmo-placeholder{translate: "authorized_apps_page.notice"}
      .row.authorized-apps-page__table-row{ng-repeat: "application in authorizedAppsPage.applications() | orderBy: 'name' track by application.id"}
        .col-xs-1.align-right
          %img.authorized-apps-page__avatar{ng-src: "{{application.logoUrl}}"}>
        .col-xs-7
          .authorized-apps-page__name {{ application.name }}
        .col-xs-4.align-center
          %button.lmo-btn--danger{ng-click: "authorizedAppsPage.openRevokeForm(application)"}
            %span{translate: "authorized_apps_page.revoke"}
        .clearfix

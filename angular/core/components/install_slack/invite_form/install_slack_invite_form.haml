.install-slack-invite-form
  %h2.lmo-h2{translate: "install_slack.invite.heading"}
  %p.poll-common-helptext{translate: "install_slack.invite.helptext"}
  %md-select{md-autofocus: "true", ng-model: "identifier", placeholder: "{{'install_slack.invite.select_a_channel' | translate}}", md-on-open: "fetchChannels()"}
    %md-option{ng-value: "channel.id", ng-repeat: "channel in channels"}
      %span &#35;{{ channel.name }}

  .md-list-item-text.lmo-flex.lmo-flex__space-between
    .poll-common-checkbox-option__text
      %h3.lmo-h3{translate: "install_slack.invite.publish_group"}
      %p.md-caption{translate: "install_slack.invite.publish_group_helptext_on", ng-if: "group.makeAnnouncement"}
      %p.md-caption{translate: "install_slack.invite.publish_group_helptext_off", ng-if: "!group.makeAnnouncement"}
    %md-checkbox{ng-model: "group.makeAnnouncement"}

  %install_slack_invite_preview{ng-if: "group.makeAnnouncement"}

  .lmo-flex.install-slack-form__actions{layout: "column"}
    %md-button.md-primary.md-raised{ng-disabled: "!identifier", translate: "install_slack.invite.set_channel", ng-click: "submit()"}

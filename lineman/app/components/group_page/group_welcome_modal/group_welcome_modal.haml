.group-welcome-modal
  .modal-header
    %button{type: 'button', class: 'close', ng-click: '$close()'}
      %span{aria-hidden: 'true'} &times;
      %span.sr-only{translate: 'common.action.cancel'}
    %h1.lmo-h1.modal-title{translate: 'group_welcome_modal.heading'}

  .modal-body
    %img.group-welcome-modal__mascot{src:'img/mascot.png'}
    %p{translate: 'group_welcome_modal.first_step'}
    %p{translate: 'group_welcome_modal.second_step'}
    %p{translate: 'group_welcome_modal.third_step'}

  .modal-footer.lmo-clearfix
    %button.btn.btn-primary{type: 'button', ng-click: '$close()', translate: 'group_welcome_modal.ok_got_it'}

%md-dialog
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %h1.lmo-h1.modal-title{translate: "invitation_form.invite_people", ng-if: "!groupName()"}
      %h1.lmo-h1.modal-title.lmo-truncate{translate: "invitation_form.invite_people_to_group", translate-value-name: "{{groupName()}}", ng-if: "groupName()"}
      %material_modal_header_cancel_button
  %md-dialog-content.md-body-1
    %invitation_form{invitation-form: "invitationForm"}
    %dialog_scroll_indicator
  %md-dialog-actions{ng-if: "invitationForm.groupId"}
    %invitation_form_actions{invitation-form: "invitationForm"}

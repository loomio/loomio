#group-description
  .description-container
    - if can? :edit_description, group
      = form_tag send("edit_description_group_path", group), :id => "description-edit-form", :class => "hidden", :remote => true do |f|
        = hidden_field_tag 'id'
        .control-group
          = text_area_tag 'description', group.description, {id: 'description-input', :autofocus => true, class: 'js-warn-before-navigating-away' }
        .save-buttons.clearfix
          = submit_tag t(:save), class: 'btn btn-info', id: 'add-description-submit', :data => {:disable_with => t(:save)}
          = link_to t(:cancel), "#", class: 'btn', id: 'cancel-add-description'
    .description-body
      - if group.description.present?
        - if can? :edit_description, group
          %a{href: "#", class: "edit-description btn" }
            %i.icon-edit
            = t(:edit)
          .long-description
            ~ render_rich_text(group.description, true)
      - elsif can? :edit_description, group
        %em= link_to t(:add_group_description), "#", class: "edit-description"
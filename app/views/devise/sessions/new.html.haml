%h2.header-space Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h5.padding
    Email
    .left-format= f.email_field :email
    Password
    .left-format= f.password_field :password
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      Remember me
  .sign-in-button
    = f.submit "Sign in", class: "btn primary small"
= render :partial => "devise/shared/links"

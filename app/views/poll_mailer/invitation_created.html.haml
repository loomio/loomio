- case @info.eventable.intent
- when 'join_poll'
  = render "poll_mailer/common/header"
  = render "poll_mailer/common/summary"
  = render "poll_mailer/#{@info.poll_type}/vote"
  = render "poll_mailer/common/footer"
- when 'join_outcome'
  = render "poll_mailer/common/header"
  = render "poll_mailer/common/summary", include_outcome: true
  = render "poll_mailer/#{@info.poll_type}/chart"
  = render "poll_mailer/#{@info.poll_type}/responses"
  = render "poll_mailer/common/footer"

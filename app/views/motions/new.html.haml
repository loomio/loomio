%h2
  = link_to @motion.group.name, @motion.group
  > New Motion

=semantic_form_for(@motion, url: motions_path(group_id: @motion.group)) do |f|
  =f.inputs do
    =f.input :name
    =f.input :description
    =f.input :facilitator, as: :select, 
      collection: @motion.group.users, member_label: :email
  =f.commit_button


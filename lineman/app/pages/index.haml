!!!
%html{ng-app: 'loomioApp'}
  %head
    %title Loomio
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=Edge', 'http-equiv': 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name: "viewport"}
    %link{href: '/css/app.css', media: 'screen', rel: 'stylesheet', type: 'text/css'}

    %base{href: '/'}
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  %body
    %header#header
      %nav.navbar.navbar-default.navbar-fixed-top{role: 'nagivation'}
        .container
          .navbar-header.loomio-nav
            .navbar-brand
              .loomio-nav-logo

          .collapse.navbar-collapse.loomio-nav
            %ul.nav.navbar-nav
              %li{dropdown: '', is-open: 'inboxIsOpen'}
                %a.navbar-btn.dropdown-toggle{ng-click: 'toggleInbox()'}
                  %i.fa.fa-lg.fa-fw.fa-inbox
                  %span.hide Inbox
                .dropdown-menu{role: 'menu'}
                  %inbox
              %li
                %a.navbar-btn
                  %i.fa.fa-lg.fa-fw.fa-search
              %li
                %a.navbar-btn
                  %i.fa.fa-lg.fa-fw.fa-users

    %main{ng_view: ''}

    %script{src: '/js/app.js', type: 'text/javascript'}
    %script{src: 'http://localhost:9292/faye/client.js', type: 'text/javascript'}

- unique_votes = motion.unique_votes
- if unique_votes.size > 0
  %h4.title-row Positions
  - unique_votes.each do |vote|
    .position-row.bordered
      .member-row
        .icon-container= render partial: "motions/display_icons", locals: { position: vote.position }
        .member-name= link_to vote.user_name, "#"
        - if vote.can_be_edited_by?(current_user)
          -if motion.phase == 'voting'
            .btn-edit-delete
              =link_to "edit", edit_motion_vote_path(motion, vote), class: 'btn small'
      .statement
        = vote.statement
- motion.users_who_did_not_vote.each do |user|
  .no-position-row.bordered
    .no-position
      = image_tag "questionmark.png"
    .member-no-position= link_to user.name, "#"

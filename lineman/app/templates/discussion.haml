.card-page.discussion
  .card-row
    .card
      .card__content
        .card__header
          %h1.card__title
            {{discussion.title}}
            %i.card__title--icon.fa.fa-star-o
        .media__details
          Started {{discussion.created_at | timeFromNowInWords}} by {{discussion.author.name}}
        .media
          .media__img
            %img{src: '/img/group-icon.jpg'}
          .media__text
            / {{discussion.group.name}}
            / {{discussion.group.memberships_count}} members
            %a{href: '#'}
              Wellington Bike
          .media__text--details
            25 members
        %img{src: '/img/group-users.png'}
        %i.fa.fa-plus
        %button.btn.btn-primary.right
          %i.fa.fa-lock.white
          Share
    / .card-row
    /   .card
    /     .card__header
    /       .media
    /         .media__img
    /           %img{alt: "...", src: '{{author.avatar_path}}'}
    /         .media__text
    /           %h4.media__title Context
    /           .media__details
    /             Started {{discussion.created_at | timeFromNowInWords}} by {{discussion.author.name}}
    /     .card__content
    /       {{discussion.description}}
    /     %a.edit-content{href: "#"}
    /       %i.icon-edit
    /       Edit

  %proposal{proposal: 'discussion.active_proposal', discussion: 'discussion'}

  .card-row
    .card
      %div{'ng-repeat' => 'event in discussion.events', ng_include: "safeEvent(event.kind) && 'generated/templates/discussion_items/'+ event.kind + '.html'"}
      -#-#"discussion_title_edited",
      -#-#"discussion_description_edited",
      -#-#"new_motion",
      -#-#"new_vote",
      -#-#"motion_closed",
      -#-#"motion_close_date_edited",
      -#-#"motion_blocked"]
      -#-#"new_discussion",

  %start_proposal{discussion: 'discussion'}

  %add_comment{discussion: 'discussion'}


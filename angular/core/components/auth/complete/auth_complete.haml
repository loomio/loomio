.auth-complete
  %auth_avatar{user: "user"}
  %h2.lmo-h2{translate: "auth_form.check_your_email"}
  %p.poll-common-helptext{ng-if: "user.sentLoginLink", translate: "auth_form.login_link_sent", translate-value-email: "{{user.email}}"}
  %p.poll-common-helptext{ng-if: "user.sentPasswordLink", translate: "auth_form.password_link_sent", translate-value-email: "{{user.email}}"}

!!!
%html
  %head
    %meta{content: "IE=Edge", "http-equiv" => "X-UA-Compatible"}/
    %title= display_title @unviewed_notifications

    /[if lt IE 9]
      =javascript_include_tag 'ie8'

    /[if lt IE 8]
      = stylesheet_link_tag 'ie7', media: "all"

    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = render 'social_metadata', :description => @meta_description, :title => @meta_title
    - analytics_scope do
      = render 'google_analytics'

  %body{class: "#{controller_name} #{action_name}"}
    .main-container.container
      = render 'announcements' if user_signed_in?
      = render 'header'
      = render 'flash_messages', :flash => flash, :on_landing_page => false
      .page-container
        = yield
      = render 'footer_logged_in'
      - analytics_scope do
        = render 'segmentio'

.navbar-wrapper
  %header.navbar{:data => {:dropdown =>'dropdown'}}
    %h1
      = link_to image_tag("top-bar-loomio.png", :alt => "Loomio"), "/"
    - if user_signed_in?
      %ul.nav.secondary-nav
        %li.dropdown#group
          %a{href: "#",  class: 'dropdown-toggle', 'data-toggle' => 'dropdown', 'id' => 'my_groups_header'}
            #group-icon
            -#- total_activity = current_user.activity_total
            -#- if total_activity > 1
              -##activity-count.span.label.label-important
                -#= total_activity
            #title
              = "My groups"
              %b.caret
          %ul.dropdown-menu
            - current_user.root_groups.order('name').each do |group|
              %li.group-item
                .link-container
                  = link_to group.name.length < 40 ? group.name : group.name[0..37]+'...', group_path(group), :class => 'view_'+group.viewable_by.to_s
                - if activity_count_for_group(group, current_user) > 0
                  .group-count
                    .activity-count.span.label.label-important
                      = activity_count_for_group(group, current_user)
                -#- activity =  current_user.activity_total_in(group)
                -#- if activity > 0
                  -#.notification-container
                    -#.span.label.label-important= activity
              - if group.subgroups.size > 0
                - group.subgroups.each do |subgroup|
                  - if current_user && current_user.groups.include?(subgroup)
                    %li.group-item.sub-group
                      .link-container
                        = link_to subgroup.name.length < 40 ? subgroup.name : subgroup.name[0..37]+'...', group_path(subgroup), :class => 'view_'+subgroup.viewable_by.to_s
                      -#- activity =  current_user.activity_total_in(subgroup)
                      -#- if activity > 0
                        -#.notification-container
                          -#.span.label.label-important= activity
            %li.new-group
              =link_to "Add New Group +", new_group_path
      %ul.nav.pull-right
        %li.feedback= "<a href='mailto:contact@loom.io' target='_blank'>Give us feedback!</a>".html_safe
        %li.dropdown#user
          %a{href: "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Settings", user_settings_path
            %li= link_to('Sign out', destroy_user_session_path, method: :delete)
    - else
      .sign-in= link_to('Sign in', new_user_session_path)

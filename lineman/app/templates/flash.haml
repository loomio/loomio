.flash-root
  .flash-container{ng-show: 'display()', ng-animate: "'enter'", class: 'alert-{{flash.level}}'}
    %ul.flash-messages{ng-if: 'flash.messageIsArray()'}
      %li.flash-message{ng-repeat: 'item in flash.message'}
        {{item | translate}}
    .flash-message{ng-if: '!flash.messageIsArray()'} {{ flash.message | translate }}
    %button.close.dismiss-flash.pull-right{type: 'button', ng-click: 'dismiss()'}
      %span{aria-hidden: true} &times;
      %span.sr-only{translate: 'common.action.dismiss'}

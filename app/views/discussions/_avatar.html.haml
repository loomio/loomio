- if local_assigns[:size] == 'small'
  - style = "height: 24px; min-width: 24px; width: 24px;"
  - size = :small
- else
  - style = "height: 40px; min-width: 40px; width: 40px;"
  - size = :medium

- user = AnonymousUser.new if user.nil?

.v-avatar{:title => user.name, :style => style}
  - if user.avatar_url(size)
    = image_tag user.avatar_url(size), alt: user.name
  - else
    = user.avatar_initials

{
  "src_folders": ["angular/test/nightwatch"],
  "tests_output": "./angular/test/output",
  "selenium": {
    "start_process": true,
    "start_session": true,
    "server_path": "./node_modules/selenium-server-standalone-jar/jar/selenium-server-standalone-3.8.1.jar",
    "log_path": "./angular/test/output",
    "port": 4444,
    "cli_args": {
      "webdriver.gecko.driver": "./node_modules/geckodriver/bin/geckodriver"
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "about:blank",
      "selenium_port" : 4444,
      "selenium_host" : "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "../screenshots"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true
      }
    }
  }
}

%div{ class: 'panel' }
  %h3 Group Stats
  %div{ class: 'panel-contents' }
    %table{ id: 'stats-table' }
      %tr
        %td
          %h2{ style: "text-align: center"}= group.org_members_count
        %td
          %h2{ style: "text-align: center"}= group.org_accepted_members_count
        %td
          %h2{ style: "text-align: center"}= group.subgroups.count
        %td
          %h2{ style: "text-align: center"}= Discussion.where(group_id: group.id_and_subgroup_ids).count
        %td
          %h2{ style: "text-align: center"}= Comment.joins(:discussion).where('discussions.group_id': group.id_and_subgroup_ids).count
        %td
          %h2{ style: "text-align: center"}= Poll.where(group_id: group.id_and_subgroup_ids).count
        %td
          %h2{ style: "text-align: center"}= Stance.joins(:poll).latest.where('polls.group_id': group.id_and_subgroup_ids).count

      %tr
        %th
          %h4{ style: "text-align: center" } Invited members
        %th
          %h4{ style: "text-align: center" } Accepted members
        %th
          %h4{ style: "text-align: center" } Subgroups
        %th
          %h4{ style: "text-align: center" } Threads
        %th
          %h4{ style: "text-align: center" } Comments
        %th
          %h4{ style: "text-align: center" } Polls
        %th
          %h4{ style: "text-align: center" } Votes

    %h4 Tags:
    %h3= group.admin_tags
    %h4 Description:
    %h3= group.description

#edit-name
  %h2= t :name
  %span{id: 'edit-name-row'}
    %span{id: 'edit-name-text'}= user.name
    (<a href="#" id="edit-name-link">edit</a>)
  = form_tag edit_name_user_path(user), method: 'put', :id => "edit-name-form", :class => 'hidden', :remote => true  do |f|
    = hidden_field_tag 'id', user.id
    = text_field_tag :user_name, user.name, :autofocus => true
    .save-buttons.clearfix
      = submit_tag t(:save), class: 'btn btn-small btn-grey run-validations', id: 'edit-name-submit', :data => {:disable_with => t(:saving)}
      = link_to t(:cancel), "#", id: 'cancel-edit-name'
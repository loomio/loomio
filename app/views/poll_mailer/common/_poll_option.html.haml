- class_name = local_assigns.fetch(:small, false) ? "poll-mailer-#{@info.poll.poll_type}__option-icon--small" : "poll-mailer-#{@info.poll.poll_type}__option-icon"
- if poll_option.poll.has_option_icons
  %td= image_tag "poll_mailer/vote-button-#{poll_option.name}.png", alt: "#{poll_option.name} icon", class: class_name
  - if local_assigns.fetch :link, false
    %td= link_to t("poll_#{@info.poll.poll_type}_options.#{poll_option.name}"), poll_url(@info.poll, @info.utm_hash(poll_option_id: poll_option.id))
  - else
    %td= t("poll_#{@info.poll.poll_type}_options.#{poll_option.name}")
- else
  %td= render 'poll_mailer/common/chip', color: poll_option.color
  - if local_assigns.fetch :link, false
    %td= link_to poll_option.display_name(zone: @info.time_zone), poll_url(@info.poll, poll_option_id: poll_option.id)
  - else
    %td= poll_option.display_name(zone: @info.recipient.time_zone)

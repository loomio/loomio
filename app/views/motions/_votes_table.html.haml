%h3 Positions
- unique_votes = motion.unique_votes
- if unique_votes.size > 0
  - if current_user && motion.user_has_voted?(current_user)
    = render "motions/votes_table_vote", vote: current_user.motion_vote(motion), motion: motion
  - unique_votes.each do |vote|
    - unless current_user && vote == current_user.motion_vote(motion)
      = render "motions/votes_table_vote", vote: vote, motion: motion
- motion.users_who_did_not_vote.each do |user|
  .no-position-row.bordered
    .no-position= image_tag "questionmark.png"
    .member-no-position= link_to user.name, "#"

  .poll-common-undecided-panel
    %md-button.poll-common-undecided-panel__button{ng-if: "canShowUndecided()", ng-click: "showUndecided()", translate: "poll_common_undecided_panel.show_undecided", translate-value-count: "{{poll.undecidedUserCount}}", aria-label: "poll_common_undecided_panel.show_undecided"}
    .poll-common-undecided-panel__panel.poll-common-undecided-panel__users{ng-if: "showingUndecided"}
      %h3.lmo-card-subheading{translate: "poll_common_undecided_panel.undecided_users", translate-value-count: "{{poll.undecidedUserCount}}"}
      %poll_common_undecided_user{user: "user", ng-repeat: "user in poll.undecided()"}
      %md-button{translate: "common.action.load_more", aria-label: "common.action.load_more", ng-click: "undecidedLoader.loadMore()", ng-if: "moreUsersToLoad()"}

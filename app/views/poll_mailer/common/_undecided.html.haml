- if @info.undecided.any?
  %h3= t(:"poll_mailer.common.undecided_members", count: @info.undecided.count)
  %table
    - @info.undecided.limit(@info.undecided_max).each do |user|
      %tr
        %td= render 'avatar', user: user
        %td= user.name
    - if @info.undecided.count > @info.undecided_max
      %tr
        %td
        %td= t(:"poll_mailer.common.more_undecided", count: @info.undecided.count - @info.undecided_max)

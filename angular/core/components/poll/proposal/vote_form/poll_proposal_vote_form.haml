%form.poll-proposal-vote-form{ng-submit: "submit()"}
  %poll_common_participant_form{stance: "stance"}

  %h3.lmo-card-subheading{translate: "poll_common.your_response"}
  .poll-common-vote-form__options
    %md-radio-group{ng-model: "stance.selectedOption"}
      %md-radio-button.poll-common-vote-form__radio-button{class: "poll-common-vote-form__radio-button--{{option.name}}", ng-repeat: "option in stance.poll().pollOptions() | orderBy: 'priority' track by option.id", ng-value: "option", aria-label: "{{option.name}}"}
        %md-tooltip.poll-common-vote-form__tooltip{md-delay: "750", md-direction: "left"}
          %span{translate: "poll_proposal_options.{{option.name}}_meaning"}
        %img.poll-proposal-form__icon{ng-src: "/img/{{option.name}}.svg"}
        %span.poll-proposal-vote-form__chosen-option--name{translate: "poll_proposal_options.{{option.name}}"}
  %validation_errors{subject: "stance", field: "stanceChoices"}

  %lmo_textarea.poll-common-vote-form__reason{model: "stance", field: "reason", no-attachments: "true", label: "'poll_common.reason' | translate", placeholder: "'poll_common.reason_placeholder' | translate", maxlength: "250"}

  .poll-common-form-actions.lmo-flex.lmo-flex__space-between
    %show_results_button{ng-if: "stance.isNew()"}
    %div{ng-if: "!stance.isNew()"}
    %md-button.md-primary.md-raised.poll-common-vote-form__submit{type: "submit", translate: "poll_common.vote"}

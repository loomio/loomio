%li.pull-right{dropdown: '', ng-if: 'userLoggedIn()'}
  %a.loomio-nav-btn.dropdown-toggle{href: '#'}
    %i.fa.fa-lg.fa-fw.fa-bell
  .loomio-nav-dropdown.dropdown-menu#notifications-dropdown{role: 'menu'}
    .navbar-notifications
      %ul.selector-list
        %li.selector-list-header
          %h3{translate: "notifications.header"}
        %li.selector-list-item.media{ng_repeat: 'notification in currentUser.notifications()', ng_include: "'generated/templates/notification_items/'+ notification.event().kind + '.html'" }

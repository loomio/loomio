%p= t(:"email.thread_mailer.motion_closing_soon")
%h4= link_to @motion.name, motion_url(@motion)

%table
  %tr
    %td
      = render 'motion_pie', motion: @motion
    %td
      = render_rich_text(@motion.description, false)

- unless @motion.user_has_voted?(@user)
  %h4= t(:"help.have_your_say")
  =render 'vote_buttons', motion: @motion



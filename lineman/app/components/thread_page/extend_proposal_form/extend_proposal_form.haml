%form.extend-proposal-form{ng-submit: 'submit()', ng-disabled: 'proposal.processing'}
  .modal-header
    %modal_header_cancel_button
    %h1.lmo-h1{translate: 'extend_proposal_form.title'}

  .modal-body
    %closing_at_field{proposal: 'proposal'}

  .modal-footer
    %button.btn.btn-primary.cuke-extend-proposal-btn{type: 'submit', translate: 'extend_proposal_form.submit'}
    %button.btn.btn-warning{type: 'button', ng-click: 'cancel($event)', translate: 'common.action.cancel'}

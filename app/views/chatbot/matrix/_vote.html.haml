- if poll.anonymous?
  %p= t(:"poll_common_action_panel.anonymous")
  
- if poll.closed?
  %p
    = t(:"poll_common_form.closed")
    = format_date_for_humans(poll.closed_at, @recipient.time_zone, @recipient.date_time_pref)

- if poll.active?
  %h5= t(:'poll_common.have_your_say')

  - if poll.is_single_choice?
    %ul
      - poll.results.each do |option|
        - next if option[:id] == 0
        %li
          %a{href: polymorphic_url(poll, poll_option_id: option[:id])}
            - case option[:name_format]
            - when 'i18n'
              = t(option[:name])
            - when 'iso8601'
              = format_iso8601_for_humans(option[:name], @recipient.time_zone, @recipient.date_time_pref)
            - else
              = option[:name]
  - else
    %h3= link_to t('poll_common.vote_now'), polymorphic_url(poll)

  %p= t(:"poll_mailer.common.you_have_until", when: format_date_for_humans(poll.closing_at, @recipient.time_zone, @recipient.date_time_pref))

- if poll.wip?
  %p= t(:"poll_common_action_panel.draft_mode", poll_type: t("poll_types.#{poll.poll_type}"))

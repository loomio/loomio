name = "<%= get_translation @translation, :name %>";
description = "<%= get_translation @translation, :description %>";
motion = $('#motion-<%= @translation[:id].to_s %>');
motion.find('.translated-title').html(name);
motion.find('.translated-description').html(description);

closing_info = motion.find('.closing-info:not(.translated)').text()
motion.find('.closing-info.translated').text(closing_info)

proposed_by  = motion.find('.proposed-by:not(.translated)').text()
motion.find('.proposed-by.translated').text(proposed_by)

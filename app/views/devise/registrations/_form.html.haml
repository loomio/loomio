=simple_form_for(@user, url: user_registration_path, :defaults => {:required => false}) do |f|
  =f.error_notification
  =f.input :name, placeholder: 'Name', label: false
  =f.input :email, placeholder: 'Email', label: false
  -unless omniauth_authenticated_and_waiting?
    =f.input :password, placeholder: 'Password', label: false
    =f.input :password_confirmation, placeholder: 'Confirm password', label: false
  -sign_up = t(:"devise.registrations.sign_up")
  =f.submit sign_up, class: "btn btn-info btn-large btn-block", :data => {:disable_with => sign_up}

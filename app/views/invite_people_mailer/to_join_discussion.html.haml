= render '/application/mailer_doctype'
%html
  %head
    = stylesheet_link_tag 'email'
  %body
    %p= t("email.to_join_discussion.content", discussion: @discussion.title)
    %p= t("email.to_join_discussion.message_intro", who: @inviter.name)
    %p= @message
    %p
      = link_to t("email.to_join_discussion.link"), invitation_url(@invitation, @utm_hash)

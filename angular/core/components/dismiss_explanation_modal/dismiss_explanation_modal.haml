.dismiss-explanation-modal
  .modal-header
    %modal_header_cancel_button
    %h1.lmo-h1.dismiss-explanation-modal__title{translate: "dismiss_explanation_modal.dismiss_thread"}

  .modal-body.dismiss-explanation-modal__body
    .dismiss-explanation-modal__dismiss-explanation{translate: "dismiss_explanation_modal.body_html"}

  .modal-footer.lmo-clearfix
    %button.dismiss-explanation-modal__dismiss-thread.lmo-btn--submit{type: "button", ng-click: "dismiss()", translate: "dismiss_explanation_modal.dismiss_thread"}
    %button.dismiss-explanation-modal__cancel.lmo-btn--cancel{type: "button", ng-click: "$close()", translate: "common.action.cancel"}

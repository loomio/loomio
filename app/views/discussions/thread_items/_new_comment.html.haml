- comment = item.eventable
.new-comment{:id => "comment-#{comment.id}"}
  .thread-item.px-3.pb-1
    #sequence-2.layout.lmo-action-dock-wrapper{:style => "margin-left: 0px;"}
      .thread-item__avatar.mr-3.mt-0
        = render "base_mailer/avatar", user: comment.author
      .layout.thread-item__body.column
        .layout.align-center.wrap
          %h3.thread-item__title.body-2{id: "event-#{item.id}"}
            %span
              %strong
                %a{:href => user_url(comment.author)}= comment.author.name
            %span
              %span{"aria-hidden" => "true"} Â·
            %span.grey--text.body-2{:href => "/d/CEupg6yw/another-discussion-title/2"}
              = render 'discussions/time_ago', time: comment.created_at
        .default-slot
          .lmo-markdown-wrapper.body-2.text--primary.thread-item__body.new-comment__body
            = render_rich_text(comment.body, comment.body_format)

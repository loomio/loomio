#user-email-popover
  .clearfix
    - if user.avatar_url
      .medlarge-user-avatar.avatar-canvas
        = image_tag user.avatar_url(:medlarge)
    - else
      .medium-user-avatar.avatar-canvas
        %span.medium-user-initials.initials-decoration
          = user.avatar_initials
    .user-details
      = mail_to user.email

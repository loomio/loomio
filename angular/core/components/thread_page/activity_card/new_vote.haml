.thread-item{ng-controller: "NewVoteItemController"}
  .thread-item__header.media
    .media-left
      .thread-item__vote-icon{class: "thread-item__vote-icon--{{vote.position}}"}
    .media-body
      %h3.thread-item__title{ng-if: "!vote.hasStatement()", id: "event-{{event.id}}"}
        %strong
          %a{lmo-href-for: "vote.author()"}> {{vote.authorName()}}
        %span{translate: "new_vote_item.{{vote.positionVerb()}}"}
        %timeago.timeago--inline{timestamp: "vote.createdAt"}
      %h3.thread-item__title{ng-if: "vote.hasStatement()", id: "event-{{event.id}}"}
        %strong
          %a{lmo-href-for: "vote.author()"}> {{vote.authorName()}}
        %span{ translate: "new_vote_item.{{vote.positionVerb()}}_with_statement", translate-value-statement: "{{vote.statement}}"}
        %translation{ng-if: "translation", translation: "translation", field: "statement"}
    .thread-item__footer
      %timeago.timeago--inline{timestamp: "vote.createdAt"}>
      %translate_button{ng-if: "vote.hasStatement()", model: "vote", showdot: "true"}

.thread-item{ng-controller: "PollExpiredItemController"}
  .thread-item__header.media
    .media-left
      %user_avatar{user: "poll.author()", size: "small"}
    .media-body
      %h3.thread-item__title{id: "event-{{event.id}}"}
        %span{translate: "poll_thread_item.{{poll.pollType}}.{{event.kind}}", translate-values: "{title: poll.title}"}>
        %timeago.timeago--inline{timestamp: "event.createdAt"}

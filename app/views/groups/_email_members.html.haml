.modal#email-members-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal"}Ã—
        %h3= t :email_members_in_group, which_group: group.full_name
      = form_tag email_members_group_path(group) do
        .modal-body
          .form-group
            = label_tag "group_email_subject", t(:subject)
            = text_field_tag "group_email_subject", nil, :placeholder => t(:subject_placeholder), class: 'form-control'
          .form-group
            = label_tag "group_email_body", t(:message)
            = text_area_tag "group_email_body", nil, :placeholder => t(:message_placeholder, which_group: group.full_name), class: 'form-control'
        .modal-footer
          = submit_tag t(:send_email), class: "btn btn-primary", :data => { :disable_with => t(:send_email) }


.thread-item{ng-controller: 'MotionOutcomeUpdatedItemController'}
  .thread-item__header.media
    .media-left
      .thread-item__proposal-icon
    .media-body
      %h3.thread-item__title{id: 'event-{{event.id}}', translate: "proposal_outcome_updated_item.proposal_outcome_updated", translate-value-actor: '{{event.actorName()}}'}
  .thread-item__body
    {{proposal.outcome}}
  .thread-item__footer
    .thread-item__actions
      %timeago{timestamp: 'event.createdAt'}

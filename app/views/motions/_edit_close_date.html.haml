#edit-close-date.modal.hidden
  .modal-header
    %button.close{"data-dismiss" => "modal"}Ã—
    %h3= t(:change_proposal_close_date_header, which: motion.name)
  = form_for motion, :url => edit_close_date_motion_path(motion.id) do |f|
    .modal-body#closing-inputs
      .control-group
        = text_field_tag :input_date, nil, class: "date-input validate-motion-close-date inputError"
        = select_hour(input_time, ampm: true)
        %span.date-error-message= t(:proposal_close_date_error)
        =f.hidden_field :close_date
    .modal-footer
      = submit_tag t(:change), class: "motion btn btn-info", id: 'change-close-date', :data => { :disable_with => t(:changing)} # run-validations
      = link_to t(:cancel), "#", "data-dismiss" => "modal", class: "btn btn-small"

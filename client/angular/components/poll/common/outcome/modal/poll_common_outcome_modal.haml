%md-dialog.poll-common-modal
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %i.mdi.mdi-thumbs-up-down
      %h1.lmo-h1{ng-switch: "currentStep"}
        %span{ng-if: "outcome.isNew()", ng-switch-when: "save", translate: "poll_common_outcome_form.new_title"}
        %span{ng-if: "!outcome.isNew()", ng-switch-when: "save", translate: "poll_common_outcome_form.update_title"}
        %span{ng-switch-when: "announce", translate: "announcement.form.outcome_announced.title"}
      %dismiss_modal_button

  %md-dialog-content.lmo-slide-animation{ng-switch: "currentStep"}
    %poll_common_outcome_form.animated{outcome: "outcome", ng-switch-when: "save"}
    %announcement_form.animated{announcement: "announcement", ng-switch-when: "announce"}

  %md-dialog-actions.lmo-slide-animation{ng-if: "currentStep == 'save'"}
    %poll_common_outcome_form_actions.animated{outcome: "outcome"}

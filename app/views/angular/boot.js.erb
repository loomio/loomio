var includeJs = function(url, callback) {
  var elem   = document.createElement('script')
  elem.src   = url
  elem.onload = callback
  document.getElementById('boot').appendChild(elem)
}

var includeCss = function(url) {
  var elem   = document.createElement('link')
  elem.href  = url
  elem.media = 'screen'
  elem.rel   = 'stylesheet'
  document.getElementById('boot').appendChild(elem)
}


%form.poll-poll-vote-form
  .poll-poll-vote-form__options{ng-if: "!stance.poll().multipleChoice"}
    %md-radio-group{ng-model: "vars.pollOptionId"}
      %md-radio-button.poll-common-vote-form__radio-button.poll-common-vote-form__border-chip{ng-repeat: "option in stance.poll().pollOptions()", ng-style: "{'border-color': option.color}", ng-value: "option.id"}
        %span.poll-poll-vote-form__chosen-option--name {{option.name}}
  %md-list.poll-poll-vote-form__options{ng-if: "stance.poll().multipleChoice"}
    %md-list-item{ng-repeat: "option in stance.poll().pollOptions()"}
      %p.poll-poll-vote-form__chosen-option--name.poll-common-vote-form__border-chip{ng-style: "{'border-color': option.color}"} {{option.name}}
      %md-checkbox.md-block.poll-poll-vote-form__checkbox{ng-model: "pollOptionIdsChecked[option.id]"}

  .poll-common-vote-form__reason
    %md-input-container.md-block
      %label{translate: "poll_common.reason"}
      %input.lmo-primary-form-input{type: "text", placeholder: "{{translations.reasonPlaceholder}}", ng-model: "stance.reason", md-maxlength: "250"}
      %validation_errors{subject: "stance", field: "reason"}

  .poll-common-form__actions
    %md-button.md-primary.md-raised{ng-click: "submit()", translate: "poll_common.vote", aria-label: "{{ 'poll_poll_vote_form.vote' | translate }}"}

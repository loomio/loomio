.notification-volume{dropdown: '', on-toggle: 'toggled(open)'}
  %a.notification-volume__button.dropdown-toggle{href: '#', ng-class: "{'btn btn-nude': showButton}"}
    %i.fa.fa-lg.fa-fw{ng-class: 'iconClassForLevel(model.volume)', aria-hidden: 'true'}>
    %span{translate: 'volume_levels.loud', ng-show: 'model.volume == "loud"'}
    %span{translate: 'volume_levels.normal', ng-show: 'model.volume == "normal"'}
    %span{translate: 'volume_levels.quiet', ng-show: 'model.volume == "quiet"'}
    %span{translate: 'volume_levels.mute', ng-show: 'model.volume == "mute"'}

  .dropdown-menu.dropdown-menu-with-labels.dropdown-menu-right{role: 'menu'}
    %h3.dropdown-heading{translate: "common.notification_volume"}
    %form{novalidate: ''}
      %ul.dropdown-menu-items
        %li.dropdown-menu-item{ng-repeat: 'level in volumeLevels'}
          %label{for: 'volume.{{level}}'}
            .dropdown-menu-item-label
              %i.fa.fa-lg{ng-class: "iconClassForLevel(level)", aria-hidden: 'true'}
              &nbsp;
              %input.sr-only{id: 'volume.{{level}}', type: 'radio', ng-model: 'model.volume', name: 'volume', value: '{{level}}', ng-change: 'saveVolume()'}
              %span{translate: 'volume_levels.{{level}}'}
              %i.fa.fa-lg.fa-check{aria-hidden: 'true', ng-show: "level == model.volume"}

            .dropdown-menu-item-details{translate: "{{translateRoot}}.volume.{{level}}"}
  .group-page-actions-divider

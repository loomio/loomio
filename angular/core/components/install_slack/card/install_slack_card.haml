.install-slack-card.lmo-card
  %h2.lmo-card-heading{ng-if: "installed()", translate: "install_slack.card.installed_title"}
  %h2.lmo-card-heading{ng-if: "!installed()", translate: "install_slack.card.install_title"}
  .lmo-flex
    %img.install-slack-card__logo{src: "/img/slack-icon.svg"}
    %p.install-slack-card__helptext.poll-common-helptext{ng-if: "installed()", translate: "install_slack.card.installed_helptext", translate-value-channel: "{{group.slackChannelName}}", translate-value-team: "{{group.slackTeamName}}"}
    %p.install-slack-card__helptext.poll-common-helptext{ng-if: "!installed()", translate: "install_slack.card.install_helptext"}
  .lmo-flex.lmo-flex__space-between
    %div
    %md-button.md-primary.md-raised{translate: "install_slack.card.install_slack", ng-click: "install()", ng-if: "!installed()"}

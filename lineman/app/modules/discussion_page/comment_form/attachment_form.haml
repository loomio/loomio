.comment-form-attachments
  %button.btn.btn-default#comment-form-attachment-button{ng-hide: 'isAttaching', ng-click: 'openFileUploadDialog()'}
    %i.fa.fa-lg.fa-paperclip
   %input.hidden{type: 'file', ng_file_select: 'upload($files)'}
  .attachment-in-progress{ng_show: 'isAttaching'}
    .attachment-filename {{ uploadingFilename }}
    .progress.active
      %progressbar.progress-striped.active{ng_attr_value: 'percentComplete'}
        {{ percentComplete }} %
    %button.close.cancel-upload{ng_click: 'abort()'} &times;

= render '/application/mailer_doctype'
%html
  %h1= t("email.invitation.header")

  %p= t("email.invitation.hi", name: @invitation.recipient_name)

  %p= t("email.invitation.intro", group_name: @invitation.group_name)

  = link_to "#{invitation_url(@invitation)}", invitation_url(@invitation)

  %p= t("email.invitation.closing_message")

  %p= t :thanks

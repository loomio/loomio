%header.lmo-navbar{role: "banner"}
  %section.lmo-navbar__item-container.lmo-navbar--left{ng-if: "isLoggedIn()", role: "navigation"}
    .lmo-navbar__item{ng-class: "{'lmo-navbar__item--selected': selected == 'dashboardPage'}"}
      %a.btn.lmo-navbar__btn.lmo-navbar__btn-icon.lmo-navbar__recent{lmo-href: "/dashboard", title: "{{ 'navbar.recent_title' | translate }}", tabindex: 1, ng-click: "homePageClicked()"}
        %i.fa.fa-lg.fa-clock-o>
        %span.lmo-navbar__btn-label{translate: "navbar.recent"}
    .lmo-navbar__item{ng-class: "{'lmo-navbar__item--selected': selected == 'inboxPage'}"}
      %a.btn.lmo-navbar__btn.lmo-navbar__btn-icon.has-badge{lmo-href: "/inbox", title: "{{ 'navbar.unread_title' | translate }}", tabindex: 2}
        %i.fa.fa-lg.fa-inbox>
        %span.lmo-navbar__btn-label{translate: "navbar.unread"}
        %span.badge{ng-show: "unreadThreadCount() > 0"}
          {{unreadThreadCount()}}
    .lmo-navbar__item{ng-class: "{'lmo-navbar__item--selected': selected == 'groupsPage'}"}
      %a.groups-item.btn.lmo-navbar__btn-icon.lmo-navbar__btn{lmo-href: "/groups", title: "{{ 'navbar.groups_title' | translate }}", tabindex: 3}
        %i.fa.fa-lg.fa-group>
        %span.lmo-navbar__btn-label{translate: "navbar.groups"}
  %section.lmo-navbar__item-container.lmo-navbar--center{ng-class: "{'lmo-navbar__logo--logged-in': isLoggedIn(), 'lmo-navbar__logo--logged-out': !isLoggedIn()}"}
    .lmo-navbar__item.lmo-navbar__logo
      %img{src: "/img/logo.png"}
  %section.lmo-navbar__item-container.lmo-navbar--right.lmo-navbar__logged-in{ng-if: "isLoggedIn()"}
    .lmo-navbar__item.lmo-navbar-search{role: "search"}
      %navbar_search
    .lmo-navbar__item.lmo-navbar__item--notifications
      %notifications
    .lmo-navbar__item.lmo-navbar__item--user
      %navbar_user_options
  %section.lmo-navbar__item-container.lmo-navbar--right.lmo-navbar__logged-out{ng-if: "!isLoggedIn()"}
      %button.lmo-navbar__sign-in{ng-click: "signIn()"}>
        %span{translate: "navbar.sign_in"}

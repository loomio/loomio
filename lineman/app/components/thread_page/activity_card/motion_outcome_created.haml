%article.thread-item{ng-controller: 'MotionOutcomeCreatedItemController', aria-labelledby: 'proposal-{{proposal.id}}'}
  .thread-item__header.media
    .media-left
      .thread-item__proposal-icon
    .media-body
      %h3.thread-item__title{id: 'proposal-{{proposal.id}}', translate: "proposal_outcome_created_item.proposal_outcome_created", translate-value-actor: '{{event.actorName()}}'}
  .thread-item__body
    {{proposal.name}}
  .thread-item__footer
    .thread-item__actions
      %timeago{timestamp: 'event.createdAt'}
.thread-mailer__footer
  - if @info.recipient.is_logged_in?
    %img.thread-mailer__footer-image{src: @info.pixel_src, alt: '', width: 1, height: 1}

    %p.thread-mailer__footer-links
      &mdash;
      %br
      = t(:'discussion_mailer.reply_or_view_online_html', url: @info.links[:eventable], hostname: AppConfig.theme[:site_name])
      %br
      = t :'discussion_mailer.turn_off_notifications_html', url: @info.links[:unfollow]                  if @info.can_unfollow?
      = t :"discussion_mailer.change_email_preferences_html", email_preferences_url: @info.links[:prefs]
  = image_tag AppConfig.theme[:email_footer_logo_src], alt: "Logo", class: "thread-mailer__footer-logo"

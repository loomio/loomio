= render :partial => "application/donate-tab"
.container#contact_message
  %section.first
    .inner-container
      .row-fluid
        .span5#contact_form
          %h1 Contact us
          = simple_form_for @contact_message, :defaults => {:required => true}, :validate => true do |f|
            = f.input :name, label: "Your name"
            = f.input :email, label: "Your email address"
            = f.input :message, label: "Your message"
            - destinations = ContactMessage::DESTINATIONS.map { |destination| [t("contact_page.destinations.#{destination}"), destination] }
            = f.input :destination, label: "Where shall we send your message?", as: :select, collection: destinations, include_blank: false
            = f.submit :submit, :value => "Send message", class: 'btn btn-info btn-large', data: { disable_with: "Send message" }
        .span5.offset1#direct_contact
          %p Fill out this form, or send an email to <a href="mailto:contact@loomio.org">contact@loomio.org</a>
          %p If you'd rather speak to someone directly, you can call Ben on +64 21 0232 5433
          %p You can also join us on <a href="https://www.facebook.com/Loomio" target='_blank'>facebook</a> and <a href="https://twitter.com/LoomioProject" target='_blank'>twitter</a>!

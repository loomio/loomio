%md-dialog.poll-common-modal.lmo-modal__narrow
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %i.mdi{class: "{{icon()}}"}
      %h1.lmo-h1{translate: "poll_common.share_poll"}
      %material_modal_header_cancel_button

  %md-dialog-content
    %poll_common_share_form{poll: "poll"}
    %dialog_scroll_indicator
  %md-dialog-actions
    %poll_common_share_form_actions{poll: "poll"}

.logged-in-navigation
  - if user_signed_in?
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav-bar-list.clearfix
            %li.nav-item#logo-home
              %a.nav-logo-link{:href => "/"}
                = image_tag("top-bar-loomio.png", :alt => "Loomio")
            = render 'notifications_dropdown'
            = render 'application/groups_dropdown'
            = render 'user_dropdown'
            = render 'contribute'
            = render 'help_dropdown'
            = render 'search'
  - else
    .container#top
      .inner-container
        .row-fluid
          =link_to image_tag("loomio-orange-header.png"), root_url
          .pull-right
            =link_to 'Sign in', new_user_session_path, class: 'btn btn-info'

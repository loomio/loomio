.footer.container.clearfix
  - if user_signed_in?
    .left
      .dropdown
        %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
          %span
            = "#{t(:"simple_form.labels.user.language_preference")}:"
            = Translation.language(current_user.language_preference)
          %b.caret
        %ul.dropdown-menu
          - Translation::LANGUAGES.each do |language|
            - link_attrs = Translation.language_link_attributes(language)
            %li= link_to link_attrs[:text], link_attrs[:href], title: link_attrs[:title]

      = link_to t(:translate, default: "help translate Loomio!"), 'https://www.loomio.org/discussions/4896'

  .footer-links
    = link_to t('footer.terms'), terms_of_service_path, target: 'blank'
    = link_to t('footer.privacy'), privacy_path, target: 'blank'
    = link_to t('pricing'), pricing_path, target: 'blank'
    = link_to t('footer.contact'), contact_path, target: 'blank'
    = link_to t('footer.about'), about_path, target: 'blank'
    = link_to t('footer.blog'), blog_path, target: 'blank'

- if signed_in?
  .filter-discussion-list-buttons.pull-right
    .filter.hidden-xs= t :'common.filter'
    - if sifting_unread?
      %a.btn.btn-success.active.js-tooltip{href: toggle_unread_path, title: t(:'discussion_list.filter_unread.disable')}
        = t :'common.unread'
    -else
      %a.btn.btn-default.js-tooltip{href: toggle_unread_path, title: t(:'discussion_list.filter_unread.enable')}
        = t :'common.unread'

    - if sifting_followed?
      %a.btn.btn-success.active.js-tooltip{href: toggle_followed_path, title: t(:'discussion_list.filter_followed.disable')}
        = t :'common.following'
    -else
      %a.btn.btn-default.js-tooltip{href: toggle_followed_path, title: t(:'discussion_list.filter_followed.enable')}
        = t :'common.following'